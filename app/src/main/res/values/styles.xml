<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#070606</item>
        <item name="colorPrimaryDark">#050505</item>
        <item name="colorAccent">#0C0C0C</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textAppearanceListItem">@style/list_item_appearance</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/pdlg_color_white</item>
    </style>

    <style name="list_item_appearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuItemStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="RobotoBoldTextAppearance">
        <item name="android:fontFamily">@font/cold</item>
        <item name="android:textColor">#050505</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#050505</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">@dimen/nav_view_textview_size</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_X_small</item>
    </style>



</resources>
